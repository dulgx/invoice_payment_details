<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Нэхэмжлэхийн form view дээрх төлбөрийн мэдээллийг нуух -->
        <record id="view_move_form_hide_payment_details" model="ir.ui.view">
            <field name="name">account.move.form.hide.payment.details</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Төлбөрийн widget-ийг нуух -->
                <xpath expr="//field[@name='invoice_payments_widget']" position="attributes">
                    <attribute name="groups">invoice_payment_details.group_invoice_payment_accountant</attribute>
                </xpath>

                <!-- Үлдэгдэл дүнг нуух -->
                <xpath expr="//field[@name='amount_residual'][@class='oe_subtotal_footer_separator']" position="attributes">
                    <attribute name="groups">invoice_payment_details.group_invoice_payment_accountant</attribute>
                </xpath>

                <!-- Outstanding credits widget-ийг нуух -->
                <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="attributes">
                    <attribute name="groups">invoice_payment_details.group_invoice_payment_accountant</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
