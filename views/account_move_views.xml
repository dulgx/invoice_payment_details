<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">

                <!-- Талбаруудын зарим нэрийг монгол хэл дээр өгөв -->
                <xpath expr="//field[@name='invoice_partner_display_name']" position="attributes">
                    <attribute name="string">Харилцагч</attribute>
                </xpath>

                <xpath expr="//field[@name='invoice_date']" position="attributes">
                    <attribute name="string">Огноо</attribute>
                </xpath>

                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="string">Компани</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_total_signed']" position="attributes">
                    <attribute name="string">Нийт дүн</attribute>
                    <attribute name="sum">Нийт</attribute>
                </xpath>

                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="string">Төлөв</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_total_in_currency_signed']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='activity_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Төлөгдсөн дүн багана нэмэх -->
                <xpath expr="//field[@name='amount_total_signed']" position="after">
                    <field name="amount_paid" string="Төлөгдсөн дүн" sum="Нийт төлөгдсөн"/>
                </xpath>

                <!-- Төлбөрийн түүх харах товч нэмэх -->
                <xpath expr="//tree" position="inside">
                    <button name="action_view_payment_history"
                            type="object"
                            string="Дэлгэрэнгүй"
                            icon="fa-list"
                            groups="invoice_payment_details.group_invoice_payment_accountant"
                            attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'in_invoice'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
